{
  "version": "1.0",
  "manifest_version": 2,
  
  "name": "Postmark",
  "description" : "",
  
  "browser_action": {
    "default_icon": "icons/postmark.png",
    "default_title": "",
    "default_popup": "popup/postmark.html"
  },
  
  "icons": {
    "16": "icons/postmark.png",
    "48": "icons/postmark.png",
    "128": "icons/postmark.png"
  },
  
  "commands": {
    "mark": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "MacCtrl+Shift+P"
      },
      "description": "mark"
    }
  },
  
  "background": {
    "scripts": ["library/jquery-3.2.1.min.js","background/bg.js"],
    "persistent": false
    },
    
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "library/jquery-3.2.1.min.js",
      "library/jquery-ui-1.12.1/jquery-ui.js",
      "content/content.js",
      "content/content-extent.js"
    ]
  }],
  
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "storage"
  ]
}
