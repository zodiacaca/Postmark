{
  "version": "0.1",
  "manifest_version": 2,
  
  "name": "Postmark",
  "description" : "Add postmarks for you!",
  
  "browser_action": {
    "default_icon": "icons/postmark-128.png"
  },
  
  "icons": {
    "16": "icons/postmark-128.png",
    "48": "icons/postmark-128.png",
    "128": "icons/postmark-128.png"
  },
  
  "commands": {
    "mark": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "MacCtrl+Shift+P"
      },
      "description": "mark"
    }
  },
  
  "background": {
    "scripts": [
      "library/jquery-3.2.1.min.js",
      "background/bg-passive.js",
      "background/bg-active.js"
    ],
    "persistent": false
    },
    
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "library/jquery-3.2.1.min.js",
      "library/jquery-ui-1.12.1/jquery-ui.js",
      "content/content-passive.js",
      "content/content-active.js",
      "content/content-active-ui.js"
    ]
  }],
  
  "options_page": "option/options.html",
  
  "web_accessible_resources": [
    "icons/*.*"
  ],
  
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "storage"
  ]
}
